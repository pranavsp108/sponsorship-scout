{
    "manifest_version": 3,
    "name": "Sponsorship Scout",
    "version": "1.0",
    "description": "Highlights visa sponsorship and citizenship requirements on job boards.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "48": "icon.png"
    }
  }